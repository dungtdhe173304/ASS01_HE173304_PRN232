@page "{id:int}"
@model eStoreClient.Pages.Admin.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this product?</h3>
</div>

<div class="card mb-4">
    <div class="card-header">
        Product Details
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Product.ProductId</dd>
            
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Product.ProductName</dd>
            
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@(Model.Product.Category?.CategoryName ?? "N/A")</dd>
            
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Product.UnitPrice?.ToString("C")</dd>
            
            <dt class="col-sm-3">Weight</dt>
            <dd class="col-sm-9">@(Model.Product.Weight ?? "N/A")</dd>
            
            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.Product.UnitsInStock</dd>
        </dl>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Product.ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>